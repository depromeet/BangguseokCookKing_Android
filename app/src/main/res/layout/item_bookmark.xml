<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/bookmark_container"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_bookmark_iv_thumbnail"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="130dp"/>
    <FrameLayout
            android:id="@+id/bookmark_gradient"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="200dp"
            android:background="@drawable/bg_bookmark_gradient"
            android:layout_height="130dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_bookmark_tv_number"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="9sp"
            tools:text="1"
            android:background="#f5a623"
            android:layout_width="21dp"
            android:layout_height="21dp"/>


</FrameLayout>