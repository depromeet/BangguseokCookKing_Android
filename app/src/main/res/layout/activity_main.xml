<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffb022"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/main_start_guide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.037"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/main_end_guide"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:id="@+id/main_ib_mypage"
            android:src="@drawable/ic_mypage"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@id/main_start_guide"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/main_ib_write"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_writing"
            android:background="@null"
            app:layout_constraintEnd_toStartOf="@id/main_end_guide"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/main_lv_logo"
            android:layout_width="100dp" android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_ib_write"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:id="@+id/main_et_search"
            app:layout_constraintTop_toBottomOf="@id/main_lv_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/main_search_et"
            app:layout_constraintWidth_percent="0.893"
            android:paddingEnd="12dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/ic_search"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintBottom_toTopOf="@id/main_bottom_container"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/main_bottom_container"
            app:layout_constraintTop_toBottomOf="@id/main_et_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_bottom_conatiner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="0dp"
                android:id="@+id/main_bottom_start_guide"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.053"
                android:layout_height="0dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="0dp"
                android:id="@+id/main_bottom_end_guide"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96"
                android:layout_height="0dp"/>

        <TextView
                android:id="@+id/main_tv_content"
                tools:text="안녕하세요 ‘만랩요리사’님!
오늘은 어떤 요리를 해볼까요?"
                android:textColor="#5e5e5e"
                android:textSize="18sp"
                android:lineHeight="25sp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/main_bottom_start_guide"
                android:maxLines="2"
                app:layout_constraintEnd_toStartOf="@id/main_tv_view_all"
                app:layout_constraintHorizontal_bias="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/main_tv_view_all"
                android:text="전체보기"
                android:textSize="14sp"
                android:textColor="#ffb245"
                app:layout_constraintEnd_toStartOf="@id/main_bottom_end_guide"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp"
                android:id="@+id/main_recycler_view"
                app:layout_constraintTop_toBottomOf="@id/main_tv_content"
                android:layout_height="0dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>