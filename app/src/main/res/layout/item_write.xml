<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_write_iv_image"
            android:layout_width="0dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/write_default_img"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="174dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_write_tv_number"
            android:layout_width="27dp"
            app:layout_constraintTop_toTopOf="@id/item_write_iv_image"
            app:layout_constraintStart_toStartOf="@id/item_write_iv_image"
            android:background="#ffb245"
            tools:text="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="14sp"
            android:lineSpacingExtra="7sp"
            android:layout_height="27dp"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/item_write_tv_content"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="text"
            android:textColor="#5e5e5e"
            android:layout_marginTop="7dp"
            android:lineSpacingExtra="7sp"
            android:maxLines="2"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@id/item_write_iv_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="내용을 작성해 주세요."
            app:layout_constraintHeight_max="800dp"
            app:layout_constraintHeight_min="40dp"
            android:layout_height="42dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>