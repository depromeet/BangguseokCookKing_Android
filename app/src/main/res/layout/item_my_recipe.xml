<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="56dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_recipe_tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="12sp"
            tools:text="활화산 계란찜"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_recipe_tv_date"
            android:textSize="10sp"
            android:textColor="#f5a623"
            android:lineSpacingExtra="11sp"
            tools:text="2018.10.20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/my_recipe_next"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/my_recipe_next"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/my_recipe_tv_date"
            app:layout_constraintBottom_toBottomOf="@id/my_recipe_tv_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>